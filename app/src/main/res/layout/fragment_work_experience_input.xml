<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Professional_license.ProfessionalLicenseInputFragment">


    <Button
        android:id="@+id/btn_delete"
        android:layout_width="41dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        style="@android:style/Widget.Material.TextView.SpinnerItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="เพิ่มข้อมูลประสบการณ์"
        android:textColor="#fff"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.255"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout

        android:id="@+id/linearLayout"
        android:layout_width="365dp"
        android:layout_height="550dp"
        android:background="@drawable/form"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.15">

        <TextView
            android:id="@+id/textView7"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="ตำแหน่งในสายงาน"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/pos_work"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/input"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/textView8"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="ตำแหน่งในการบริหารงาน"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/pos_manager"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/input"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/textView9"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="ระดับตำแหน่ง"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/seq_pos"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/input"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/textView10"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="วันที่ดำรงตำแหน่ง"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/start_pos"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/input"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textColor="#fff" />


        <TextView
            android:id="@+id/textView11"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="ถึง"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/end_pos"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/input"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textColor="#fff" />


        <TextView
            android:id="@+id/textView12"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="ระบุเอง"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/note"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/input"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textColor="#fff" />

    </LinearLayout>

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:text="บันทึก"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/submit_btn"
        android:textColor="#fff"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"/>


</androidx.constraintlayout.widget.ConstraintLayout>